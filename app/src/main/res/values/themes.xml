<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="ButtonTheme" parent="Theme.MaterialComponents.Light" />
    <style name="side_menu_image">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>

    </style>

    <style name="side_menu_textStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/messinasans_regular</item>

    </style>
    <style name="txtAddtoEventDialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:fontFamily">@font/messinasans_regular</item>
    </style>
    <style name="txtProfileHintFont">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/messinasans_regular</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>

    </style>
    <style name="txtProfileFont">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/messinasans_semibold</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="paddingStyle">
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
    </style>
    <style name="nwOrdrDividrStyle">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>
    <style name="moreLabelStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/messinasans_regular</item>
    </style>
    <style name="linearOrderDetail">
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>
    <style name="nwOrdrLableTxtStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/messinasans_regular</item>
    </style>
    <style name="nwOrdrValTxtStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:fontFamily">@font/messinasans_regular</item>
    </style>

    <style name="theme_btn_keyboard">
        <item name="android:layout_width">@dimen/_55sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="theme_radio_btn">
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:layout_width">@dimen/_8sdp</item>
        <item name="android:layout_height">@dimen/_8sdp</item>
    </style>
</resources>